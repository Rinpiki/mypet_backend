generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/dev.db"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  isAdmin Boolean @default(false)
  pets Pets[]
  createdAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Pets {
  id          String    @id @default(uuid())
  name        String
  age         Int
  breed       String
  sex         String
  tutor       String
  location    String
  description String
  contact     Contact[] 
  userId      String
  author      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Contact {
  id        String  @id @default(uuid())
  whatsapp  String
  instagram String?
  tiktok    String?
  facebook  String?
  x         String?
  petId     String
 author    Pets    @relation(fields: [petId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
